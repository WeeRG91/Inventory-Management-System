@page "/inventories"

@attribute [Authorize(Policy = "Inventory")]

<PageTitle>Inventories</PageTitle>

<h1>Inventory List</h1>

<br/>

<SearchComponent OnSearch="HandlerSearch" />

<br/>

<InventoryListComponent SeachInventoryFilter="@inventoryNameToSearch" />

<br/>

<a href="/add-inventory" class="btn btn-primary">Add Inventory</a>

@code {
    private string? inventoryNameToSearch;

    private void HandlerSearch(string searchFilter)
    {
        inventoryNameToSearch = searchFilter;
    }
}
